        <!-- <form class="col-md-12" method="post" action=""> -->
          <div class="site-blocks-table">
            <table class="table">
              <thead>
                <tr>
                  <th class="product-thumbnail">Image</th>
                  <th class="product-name">Product</th>
                  <th class="product-price">Price</th>
                  <th class="product-quantity">Quantity</th>
                  <th class="product-total">Total</th>
                  <th class="product-remove">Remove</th>
                </tr>
              </thead>
              <tbody>
                <% if (cart && cart.length > 0) { %>
                  <% cart.forEach(item => { %>
                    <tr>
                      <td class="product-thumbnail">
                        <img src="<%= item.productId.productImage[0] %>" alt="Image" class="img-fluid">
                      </td>
                      <td class="product-name">
                        <h2 class="h5 text-black"><%= item.productId.productName %></h2>
                      </td>
                      <td>₹<%= item.productId.salePrice %></td>
                      <td>
                        <!-- <div class="input-group mb-3 d-flex align-items-center quantity-container" style="max-width: 120px;">
                          <div class="input-group-prepend">
                            <button class="btn btn-outline-black decrease" type="button">&minus;</button>
                          </div>
                          <input type="text" class="form-control text-center quantity-amount" name="quantity" size="5" value="<%= item.quantity %>" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
                          <div class="input-group-append">
                            <button class="btn btn-outline-black increase" type="button">&plus;</button>
                          </div>
                        </div> -->
                        <div class="input-group mb-3 d-flex align-items-center quantity-container" style="max-width: 120px;">
                          <div class="input-group-prepend">
                              <button class="btn btn-outline-black decrease" type="button" onclick="updateCart('<%= item.productId._id %>', '<%= item.quantity - 1 %>')">&minus;</button>
                          </div>
                          <input type="text" class="form-control text-center quantity-amount" name="quantity" size="5" value="<%= item.quantity %>" readonly>
                          <div class="input-group-append">
                              <button class="btn btn-outline-black increase" type="button" onclick="updateCart('<%= item.productId._id %>', '<%= item.quantity + 1 %>')">&plus;</button>
                          </div>
                      </div>
                      </td>
                      <td>₹<%= item.productId.salePrice * item.quantity %></td>
                      <td>
                        <form action="/remove-from-cart/<%= item.productId._id %>" method="POST" style="display: inline;">
                          <button type="submit" class="btn btn-danger btn-sm">X</button>
                        </form>
                      </td>
                    </tr>
                  <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="6" class="text-center">Your cart is empty.</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        <!-- </form> -->
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="row mb-5">
            <div class="col-md-6 mb-3 mb-md-0">
              <button class="btn btn-black btn-sm btn-block">Update Cart</button>
            </div>
            <div class="col-md-6">
