    <div class="container mt-5">
        <h2>Your Wishlist</h2>
        <div class="row">
            <% if (wishlist && wishlist.length > 0) { %>
                <% wishlist.forEach(item => { %>
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <img src="<%= item.productId.productImage[0] %>" class="card-img-top" alt="Image">
                            <div class="card-body">
                                <h5 class="card-title"><%= item.productId.productName %></h5>
                                <p class="card-text">â‚¹<%= item.productId.salePrice %></p>
                                <!-- <form action="/wishlist/remove/<%= item.productId._id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-danger">Remove</button>
                                </form>
                                <form action="/wishlist/add-to-cart/<%= item.productId._id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-primary">Add to Cart</button>
                                </form> -->
                                <button class="btn btn-danger" onclick="removeFromWishlist('<%= item.productId._id %>')">Remove</button>
                                <button class="btn btn-primary" onclick="addToCart('<%= item.productId._id %>')">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>Your wishlist is empty.</p>
            <% } %>
        </div>
    </div>

    <%-include("../../views/partials/user/footer")%>
    <script>
        function removeFromWishlist(productId) {
    fetch(`/wishlist/remove/${productId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            Swal.fire({
                icon: 'success',
                title: 'Removed!',
                text: 'Product has been removed from your wishlist.',
                showConfirmButton: false,
                timer: 1500
            }).then(() => {
                window.location.reload(); // Reload the page to reflect changes
            });
        } else {
            Swal.fire('Error', data.message, 'error');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        Swal.fire('Error', 'Something went wrong!', 'error');
    });
}

function addToCart(productId) {
    fetch(`/cart/add/${productId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
        Swal.fire({
                icon: 'success',
                title: 'Added!',
                text: 'Product has been added to your cart.',
                showConfirmButton: false,
                timer: 1500
            }).then(() => {
                window.location.reload(); 
            });
        }else{
            Swal.fire('Error', data.message, 'error');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        Swal.fire('Error', 'Something went wrong!', 'error');
    });
}
    </script>
     <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
