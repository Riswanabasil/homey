                                <p class="card-text">
                                    <%= address.city %><br>
                                    <%= address.landMark %><br>
                                    <%= address.state %><br>
                                    <%= address.pincode %>
                                </p>
                                <p class="card-text">Phone: <%= address.phone %></p>
                                <a href="/edit-address/<%= address._id %>" class="text-primary">Edit</a> |
