<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="author" content="Untree.co">
  <link rel="shortcut icon" href="favicon.png">

  <meta name="description" content="" />
  <meta name="keywords" content="bootstrap, bootstrap4" />

		<!-- Bootstrap CSS -->
		<link href="css/bootstrap.min.css" rel="stylesheet">
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
		<link href="css/tiny-slider.css" rel="stylesheet">
		<link href="css/style.css" rel="stylesheet">
		<title>Homey</title>
		<style>
			/* Base styles for mobile first */
.product-item img, .hero-img-wrap img {
    width: 100%;
    height: auto;
	
}

/* Larger devices (tablets, 768px and up) */
@media (min-width: 768px) {
    .hero {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .intro-excerpt, .hero-img-wrap {
        flex: 1;
    }

    .product-item {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .product-thumbnail {
        max-width: 100%;
        height: auto;
    }
	
}

/* Larger desktops (992px and up) */
@media (min-width: 992px) {
    .col-lg-3, .col-lg-7 {
        padding-right: 15px;
        padding-left: 15px;
    }

    .product-section .col-lg-3 {
        flex: 0 0 25%;
        max-width: 25%;
    }
}

		</style>
	</head>


	<body>

		<%-include("../../views/partials/user/header")%>	

		<div class="hero">
			<div class="container">
				<div class="row justify-content-between">
					<div class="col-lg-5">
						<div class="intro-excerpt">
							<h1><%= banner ? banner.title : 'Modern Interior' %><span clsas="d-block"></span></h1>
							<p class="mb-4"><%= banner ? banner.description : 'Donec vitae odio quis nisl dapibus malesuada. Nullam ac aliquet velit. Aliquam vulputate velit imperdiet dolor tempor tristique.' %></p>
							<p><a href="/shop" class="btn btn-secondary me-2">Shop Now</a><a href="/shop" class="btn btn-white-outline">Explore</a></p>
						</div>
					</div>
					<div class="col-lg-7">
						<div class="hero-img-wrap">
							<img src="<%= banner ? banner.bannerImage : 'images/couch.png' %>" class="img-fluid">
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Start Product Section -->
		<div class="product-section">
			<div class="container">
				<div class="row">

					<!-- Start Column 1 -->
					
					<div class="col-md-12 col-lg-3 mb-5 mb-lg-0">
						<h2 class="mb-4 section-title">Crafted with excellent material.</h2>
						<p class="mb-4">Donec vitae odio quis nisl dapibus malesuada. Nullam ac aliquet velit. Aliquam vulputate velit imperdiet dolor tempor tristique. </p>
						<p><a href="/shop" class="btn">Explore</a></p>
					</div> 
					<!-- End Column 1 -->

					<!-- Start Column 2 -->
					<% products.forEach(product => { %>
					<div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0">
						<a class="product-item" href="/shop">
							<img src="<%= product.productImage[0] %>" class="img-fluid product-thumbnail">
							<h3 class="product-title"><%= product.name %></h3>
							<strong class="product-price">â‚¹<%= product.salePrice %></strong>

							<span class="icon-cross">
								<img src="images/cross.svg" class="img-fluid">
							</span>
						</a>
					</div> 
					<% }) %>

				</div>
			</div>
		</div>
		
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
		
		

		<%-include("../../views/partials/user/footer")%>


		<script src="js/bootstrap.bundle.min.js"></script>
		<script src="js/tiny-slider.js"></script>
		<script src="js/custom.js"></script>
	</body>

</html>