<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | Homey</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }
        .navbar {
            background-color: #3b5d50;
        }
        .navbar-brand, .nav-link {
            color: white !important;
        }
        .sidebar {
            background-color: #3b5d50;
            height: 100vh;
            padding-top: 10px;
            position: fixed;
            top: 0;
            left: 0;
            width: 200px;
            transition: all 0.3s;
        }
        .sidebar .brand {
            font-size: 1.5rem;
            color: white;
            text-align: center;
            padding: 10px 0;
            font-weight: bold;
        }
        .sidebar a {
            color: white;
            display: block;
            padding: 10px 20px;
            text-decoration: none;
        }
        .sidebar a:hover {
            background-color: #2f4a41;
        }
        .content {
            margin-left: 200px;
            padding: 20px;
        }
        .logout-btn {
            color: white !important;
        }
        @media (max-width: 768px) {
            .sidebar {
                width: 0;
                overflow: hidden;
            }
            .sidebar.active {
                width: 200px;
            }
            .content {
                margin-left: 0;
                padding-left: 20px;
            }
            .navbar .navbar-toggler {
                border-color: white;
            }
            .navbar .navbar-toggler-icon {
                background-color: white;
            }
        }

        /* Chart and table responsiveness */
        .chart-container {
            width: 100%;
            max-width: 1000px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="#">Homey</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link logout-btn" href="/admin/logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    
    <div class="sidebar">
        <div class="brand">Homey</div>
        <a href="/admin/dashboard">Dashboard</a>
        <a href="/admin/orders">Orders</a>
        <a href="/admin/category">Category</a>
        <a href="/admin/coupons">Coupon</a>
        <a href="/admin/product">Product</a>
        <a href="/admin/user">User</a>
        <a href="/admin/referral">Offer</a>
        <a href="/admin/sales-report">Sales</a>
    </div>
    
    <div class="content">
        <div class="chart-container">
            <h2>Sales Chart</h2>
            <label for="filter">Filter:</label>
            <select id="filter" onchange="updateChart()">
                <option value="daily" <%= filter === 'daily' ? 'selected' : '' %>>Daily</option>
                <option value="monthly" <%= filter === 'monthly' ? 'selected' : '' %>>Monthly</option>
                <option value="yearly" <%= filter === 'yearly' ? 'selected' : '' %>>Yearly</option>
            </select>
            <canvas id="salesChart" width="400" height="200"></canvas>
        </div>

        <h3>Best Selling Products</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Sl.no</th>
                    <th>Name</th>
                    <th>Sales</th>
                </tr>
            </thead>
            <tbody>
                <% topProducts.forEach((product, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= product.productName %></td>
                        <td><%= product.totalSales %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <h3>Best Selling Categories</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Sl.no</th>
                    <th>Name</th>
                    <th>Sales</th>
                </tr>
            </thead>
            <tbody>
                <% topCategories.forEach((category, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= category._id %></td> 
                        <td><%= category.totalSales %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    
    <script>


document.addEventListener('DOMContentLoaded', function () {
    const timePeriod = document.getElementById('filter').value;  
    const salesData = JSON.parse('<%- JSON.stringify(salesData) %>');   

    let salesValues = salesData.map(item => item.totalSales);  
    let { labels, salesByMonth, salesByYear } = getLabelsForTimePeriod(timePeriod, salesData);  

    
    if (timePeriod === "monthly") {
        salesValues = salesByMonth;  
    } else if (timePeriod === "yearly") {
        salesValues = salesByYear;  
    }

    const ctx = document.getElementById('salesChart').getContext('2d');
    const salesChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels,  
            datasets: [{
                label: 'Total Sales',
                data: salesValues,  
                borderColor: '#36A2EB',
                fill: false,
            }]
        },
        options: {
            scales: {
                x: {
                    title: { display: true, text: 'Time Period' }, 
                },
                y: {
                    title: { display: true, text: 'Total Sales' }, 
                    beginAtZero: true  
                }
            }
        }
    });
});


function updateChart() {
    const timePeriod = document.getElementById('filter').value;
    
    console.log("Updating chart with timePeriod:", timePeriod);

    window.location.href = `/admin/dashboard?timePeriod=${timePeriod}`;  
}


function getLabelsForTimePeriod(timePeriod, salesData) {
    let labels = [];
    let salesValues = salesData.map(item => item.totalSales);
    if (timePeriod === "daily") {
        labels = salesData.map(item => new Date(item._id).toLocaleDateString());  
    } else if (timePeriod === "monthly") {
        
        const monthNames = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];
        labels = monthNames;

        
        const salesByMonth = salesData.reduce((acc, item) => {
            const monthIndex = parseInt(item._id.split('-')[1], 10) - 1;  
            acc[monthIndex] = item.totalSales;
            return acc;
        }, Array(12).fill(0));  

        return { labels, salesByMonth };
    } else if (timePeriod === "yearly") {
        
        const currentYear = new Date().getFullYear();
        const startYear = currentYear - 9;
        labels = Array.from({ length: 10 }, (_, i) => (startYear + i).toString());

        
        const salesByYear = salesData.reduce((acc, item) => {
            const year = new Date(item._id).getFullYear();
            const yearIndex = year - startYear;
            acc[yearIndex] = item.totalSales;
            return acc;
        }, Array(10).fill(0));  

        return { labels, salesByYear };
    }

    return  { labels, salesValues }
}



    </script>
