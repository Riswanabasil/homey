        }
        .container {
            margin-top: 20px;
            flex-grow: 1;
        }
        .form-group label {
            font-weight: bold;
        }
        .btn-custom {
            background-color: #3b5d50;
            color: white;
            font-weight: bold;
            border: none;
        }
        .btn-custom:hover {
            background-color: #2f4a41;
        }
