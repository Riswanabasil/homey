    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }
        .navbar, .sidebar {
            background-color: #3b5d50;
        }
        .navbar-brand, .nav-link, .logout-btn {
            color: white !important;
        }
        .container {
            margin-top: 20px;
        }
        .form-group label {
            font-weight: bold;
        }
        .btn-custom {
            background-color: #3b5d50;
            color: white;
            font-weight: bold;
            border: none;
        }
        .btn-custom:hover {
            background-color: #2f4a41;
        }
        .current-images img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            margin-right: 10px;
            margin-bottom: 10px;
        }
        .current-images .remove-btn {
            display: block;
            margin-top: 5px;
        }
        .centered-form {
            max-width: 800px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .error-message {
            color: red;
            display: none;
        }
