    height: 100px; 
    margin-right: 10px; 
}
.thumb {
    height: 100px;
    margin: 10px 5px 0 0;
    position: relative;
    display: inline-block;
}

span button {
    position: absolute;
    top: 0;
    right: 0;
    padding: 5px 10px;
    background-color: red;
    color: white;
    border: none;
    cursor: pointer;
}
.remove-btn {
    margin-top: 5px;
    padding: 5px 10px;
    background-color: red;
    color: white;
    border: none;
    cursor: pointer;
}


        @media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
            }
            .sidebar .nav-link {
                text-align: center;
            }
        }
        @media (max-width: 576px) {
            .d-flex {
                flex-direction: column;
            }
            .container {
                margin-top: 0;
            }
