<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management | Homey</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }
        .navbar {
            background-color: #3b5d50;
        }
        .navbar-brand, .nav-link, .logout-btn {
            color: white !important;
        }
        .sidebar {
            background-color: #3b5d50;
            height: 100vh;
            padding-top: 10px;
            position: fixed;
            top: 0;
            left: 0;
            width: 200px;
            transition: all 0.3s;
        }
        .sidebar .brand {
            font-size: 1.5rem;
            color: white;
            text-align: center;
            padding: 10px 0;
            font-weight: bold;
        }
        .sidebar a {
            color: white;
            display: block;
            padding: 10px 20px;
            text-decoration: none;
        }
        .sidebar a:hover {
            background-color: #2f4a41;
        }
        .content {
            margin-left: 200px;
            padding: 20px;
        }
        .logout-btn {
            color: white !important;
        }
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(59, 93, 80, 0.1);
        }
        .user-icon {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            margin-right: 10px;
        }
        .btn-block {
            background-color: #ff5c5c;
            color: white;
        }
        .btn-block:hover {
            background-color: #e04b4b;
        }
        .btn-success {
            background-color: #28a745;
            color: white;
        }
        .btn-success:hover {
            background-color: #218838;
        }
        @media (max-width: 768px) {
            .sidebar {
                width: 0;
                overflow: hidden;
            }
            .sidebar.active {
                width: 200px;
            }
            .content {
                margin-left: 0;
            }
            .content.active {
                margin-left: 200px;
            }
            .navbar .navbar-toggler {
                border-color: white;
            }
            .navbar .navbar-toggler-icon {
                background-color: white;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="#">Homey</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link logout-btn" href="/admin/logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="sidebar">
        <div class="brand">Homey</div>
        <a href="/admin/dashboard">Dashboard</a>
        <a href="/admin/orders">Orders</a>
        <a href="/admin/category">Category</a>
        <a href="/admin/coupons">Coupon</a>
        <a href="/admin/product">Product</a>
        <a href="/admin/user">User</a>
        <a href="/admin/referral">Offer</a>
    </div>

    <div class="content">
        <h2>User Management</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td>
                            <!-- <img src="/images/default-user.png" alt="User Icon" class="user-icon"> -->
                            <%= user.name %>
                        </td>
                        <td><%= user.email %></td>
                        <td><%= user.isBlocked ? 'Blocked' : 'Active' %></td>
                        <td>
                            <form action="/admin/users/<%= user._id %>/toggle-block" method="POST">
                                <button type="submit" class="btn btn-<%= user.isBlocked ? 'success' : 'block' %>">
                                    <%= user.isBlocked ? 'Unblock' : 'Block' %>
                                </button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
